<p id="notice"><%= notice %></p>

<div class="pictures center-block">
  <div class="content user_name">
    <%= @picture.user.name %>
  </div>
  <p><%= image_tag @picture.image_url %></p>

  <div class="content_area">
    <%= good_on_off_button_helper(@picture.id, current_user.id) %>
    <div class="content">
      <%= @picture.content %>
    </div>
  </div>
</div>

<%= link_to '編集', edit_picture_path(@picture) %> |
<%= link_to '削除', @picture, method: :delete, data: { confirm: 'Are you sure?' } %><br>
<%= link_to 'マイページに戻る', user_path(current_user.id) %>
